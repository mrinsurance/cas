RewriteOptions inherit

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    #################################################
    # 1️⃣ FORCE HTTPS (VERY IMPORTANT)
    #################################################
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    #################################################
    # 2️⃣ Handle Authorization Header (Laravel)
    #################################################
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    #################################################
    # 3️⃣ Remove Trailing Slash (Laravel safe)
    #################################################
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    #################################################
    # 4️⃣ Laravel Front Controller
    #################################################
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

#################################################
# 5️⃣ Auto-upgrade insecure HTTP assets
#################################################
<IfModule mod_headers.c>
    Header always set Content-Security-Policy "upgrade-insecure-requests;"
</IfModule>

#################################################
# 6️⃣ Protect .git folder (security)
#################################################
RedirectMatch 404 /\.git
